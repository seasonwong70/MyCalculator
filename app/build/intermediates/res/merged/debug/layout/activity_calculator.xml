<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:columnCount="4"
    android:rowCount="7"
    android:id="@+id/grid_layout"
    android:useDefaultMargins="false"
    android:rowOrderPreserved="false"
    android:alignmentMode="alignBounds"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <LinearLayout
        android:layout_columnSpan="4"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:layout_row="0"
        android:layout_column="0">

        <!--<WebView-->
            <!--android:id="@+id/display_area"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:visibility="visible"-->
            <!--android:layout_weight="5" />-->
        <TextView
            android:id="@+id/display_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:textColor="#062325"
            android:textColorHighlight="#3d8689"
            android:textSize="30pt"
            android:textIsSelectable="false"
            android:textAlignment="gravity"
            android:gravity="bottom|right" />

    </LinearLayout>


    <Button
        android:id="@+id/clear_btn"
        android:text="C"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_height="80dp" />
    <Button
        android:id="@+id/back_btn"
        android:text="B"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_height="80dp"/>


    <Button
        android:id="@+id/divide_by_btn"
        android:text="/"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/duplicate_btn"
       android:text="*"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_height="80dp"/>

    <Button
       android:id="@+id/number_7_btn"
       android:text="7"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_height="80dp"/>

    <Button
         android:id="@+id/number_8_btn"
        android:text="8"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/number_9_btn"
       android:text="9"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/minus_btn"
       android:text="-"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_height="80dp"/>

    <Button
         android:id="@+id/number_4_btn"
        android:text="4"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_height="80dp"/>

    <Button
         android:id="@+id/number_5_btn"
        android:text="5"
         android:layout_row="4"
         android:layout_column="1"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/number_6_btn"
       android:text="6"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/plus_btn"
        android:text="+"
        android:layout_row="4"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal"
        android:layout_height="80dp"/>
     <Button
         android:id="@+id/number_1_btn"
        android:text="1"
         android:layout_row="5"
         android:layout_column="0"
         android:layout_height="80dp"/>
     <Button
         android:id="@+id/number_2_btn"
        android:text="2"
         android:layout_row="5"
         android:layout_column="1"
         android:layout_height="80dp"/>
     <Button
         android:id="@+id/number_3_btn"
        android:text="3"
         android:layout_row="5"
         android:layout_column="2"
         android:layout_height="80dp"/>

    <Button
        android:id="@+id/equal_btn"
       android:text="="
        android:layout_gravity="fill"
        android:layout_row="5"
        android:layout_column="3"
        android:layout_rowSpan="2" />

    <Button
         android:id="@+id/number_0_btn"
        android:text="0"
         android:layout_columnSpan="2"
         android:layout_gravity="fill_horizontal"
         android:layout_row="6"
         android:layout_column="0"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/point_btn"
        android:text="."
        android:layout_row="6"
        android:layout_column="2"
        android:layout_height="80dp"/>

</GridLayout>